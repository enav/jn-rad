<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields>
		<!-- basic -->
		<field
			name="enable"
			type="radio" 
			default="1" 
			required="true" 
			class="btn-group btn-group-yesno"
			>
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</field>
		<field
			name="name" 
			type="text" 
			filter="string" 
			required="true" 
			label="COM_JNTRACKER_FIELD_EMPLOYEE_NAME" 
			description="COM_JNTRACKER_FIELD_EMPLOYEE_NAME_DESC" 
		/>
		<field
			name="type"
			required="true" 
			type="list" 
			default="0%" 
			label="COM_JNTRACKER_FIELD_EMPLOYEE_TYPE" 
			description="COM_JNTRACKER_FIELD_EMPLOYEE_TYPE_DESC"
			>
			<option value="developer">Developer</option>
			<option value="manager">Manager</option>
		</field>
		<field 
			name="notes" 
			type="editor" 
			filter="safehtml" 
			label="COM_JNTRACKER_FIELD_NOTES" 
			description="COM_JNTRACKER_FIELD_NOTES_DESC" 
		/>
		
		<!-- system -->
		<field
			name="id" 
			type="hidden"
			default="0"
		/>
	</fields>
</form>
