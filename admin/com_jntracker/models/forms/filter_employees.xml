<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="filter">
		<!-- text search -->
		<field
			name="search"
			type="text"
			label="COM_JNTRACKER_FILTER_SEARCH"
			description="COM_JNTRACKER_FILTER_SEARCH_DESC"
			hint="JSEARCH_FILTER"
		/>
		
		<!-- search tools -->
		<field
			name="enable"
			type="list" 
			default="" 
			onchange="this.form.submit();"
			>
			<option value="">COM_JNTRACKER_OPTION_HEADER_ENABLE</option>
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</field>
		
		<field
			name="type"
			type="list" 
			default="" 
			onchange="this.form.submit();"
			>
			<option value="">COM_JNTRACKER_OPTION_HEADER_TYPE</option>
			<option value="developer">COM_JNTRACKER_OPTION_DEVELOPER</option>
			<option value="manager">COM_JNTRACKER_OPTION_MANAGER</option>
		</field>
		
	</fields>
	
	<fields name="list">
		<!-- limit box -->
		<field
			name="limit"
			type="limitbox"
			class="input-mini"
			default="25"
			label="COM_JNTRACKER_LIST_LIMIT"
			description="COM_JNTRACKER_LIST_LIMIT_DESC"
			onchange="this.form.submit();"
		/>
	</fields>
	
</form>
